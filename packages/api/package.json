{
  "name": "nazrin-api",
  "description": "nazr.in API",
  "version": "0.0.0",
  "main": "./build/app.js",
  "scripts": {
    "build": "shx rm -rf build && tsc",
    "dev": "npm-run-all build --parallel dev:*",
    "dev:server": "PORT=8000 nodemon ./bin/server",
    "dev:tsc": "tsc -w",
    "production:postinstall": "cross-env NODE_ENV=production yarn build",
    "production:server": "node -r dotenv/config ./bin/server",
    "test": "yarn build && nyc ava",
    "test:coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "corser": "^2.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "hashids": "^2.2.8",
    "moment-timezone": "^0.5.32",
    "mongoose": "^5.10.2",
    "mongoose-sequence": "^5.3.0",
    "morgan": "^1.10.0",
    "path": "^0.12.7",
    "raven": "^2.4.2",
    "rotating-file-stream": "^2.1.3",
    "validator": "^13.5.2"
  },
  "devDependencies": {
    "@types/node": "^14.14.6",
    "ava": "^2.4.0",
    "coveralls": "^3.1.0",
    "nyc": "^15.1.0",
    "supertest": "^6.1.3"
  },
  "license": "MIT"
}
